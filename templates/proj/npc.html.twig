<div class="{{ player.name|lower }}-container">
    <div class="{{ player.name|lower }}-head">
        <p class="underline">{{ player.name }}</p>
        <p class="smaller"> ${{ player.chips }}</p>
    </div>
    {% if player.role is same as "dealer" %}
        <div class="dealer-chip-{{ player.name|lower }}-container">
                <img
                    class="dealer-chip"
                    src="{{ asset('images/proj/dealer.png') }}"
                    width="50"
                >
        </div>
    {% endif %}
    <div class="p-card-{{ player.name|lower }}-container">
        {% for card in player.hand %}
            <img class="hand-card" src="{{ asset('images/proj/cards/X.png') }}">
        {% endfor %}
    </div>
</div>
<div class="{{ player.name|lower }}-bet-container">
    <div class="bet-size-container">
        <p class="smaller">${{ player.bets }}</p>
    </div>
</div>