<div class="controls-form-container">
    {% if actions == 3 %}
        <form class="controls-form call" action="" method="">
            <div class="p-call action">
                <button class="p-button call" onClick="this.form.action='{{ callUrl }}';this.form.method='post';">
                    Call ({{ call }})
                </button>
            </div>
            <div class="input-container">
                <input
                    type="number"
                    value="{{ call }}"
                    readonly="readonly"
                    style="display:none;"
                    name="call-amount"
                    id="call-amount"
                >
            </div>
        </form>
        <form class="controls-form raise" action="" method="">
            <div class="p-raise controls">
                <button
                    class="p-button raise"
                    onClick="this.form.action='{{ raiseUrl }}';this.form.method='post';"
                >
                Raise ({{ raiseAmount }})
                </button>
            </div>
            <div class="input-container">
                <input
                    class="p-input raise"
                    type="number"
                    style="display:none;"
                    required="required"
                    value="{{ raiseAmount + call }}"
                    name="raise-amount"
                    id="raise-amount"
                >
            </div>
        </form>
        <form class="controls-form fold" action="" method="">
            <div class="p-fold controls">
                <button
                    class="p-button fold"
                    onClick="this.form.action='{{ foldUrl }}';this.form.method='post';"
                >
                Fold
                </button>
            </div>
        </form>
    {% elseif actions == 2 %}
        <form class="controls-form check" action="" method="">
            <div class="p-check controls">
                <button class="p-button check" onClick="this.form.action='{{ checkUrl }}';this.form.method='post';">
                    Check
                </button>
            </div>
        </form>
        <form class="controls-form raise" action="" method="">
            <div class="p-raise controls">
                <button class="p-button raise" onClick="this.form.action='{{ raiseUrl }}';this.form.method='post';">
                    Raise ({{ raiseAmount }})
                </button>
            </div>
            <div class="input-container">
                <input
                    class="p-input raise"
                    type="number"
                    style="display:none;"
                    required="required"
                    value="{{ raiseAmount + call }}"
                    name="raise-amount"
                    id="raise-amount"
                >
            </div>
        </form>
    {% endif %}
</div>