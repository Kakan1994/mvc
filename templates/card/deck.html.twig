{% extends 'base.html.twig' %}

{% block title %}Deck of Cards{% endblock %}

{% block body %}
<h1>Deck of Cards</h1>

<div class="deck">
    {% for card in cards %}
    <span class="card{% if card.getSuit() in ['♥', '♦'] %} red{% endif %}">{{ card }}</span>
    {% endfor %}

</div>

<a href="{{ path('card_deck_shuffle') }}">Shuffle and display deck of cards</a>
{% endblock %}
